<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:focusable="true"
    >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/title_string"
        android:id="@+id/textViewTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:focusable="true"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Track 1 UN Length"
        android:id="@+id/textViewTrack1UNLength"
        android:layout_marginTop="53dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewTitle" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewTrack1Results"
        android:textColor="#ffff0000"
        android:textStyle="bold"
        android:typeface="monospace"
        android:textSize="20sp"
        android:layout_below="@+id/textViewTrack1UNLength"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textViewTrack1UNLength" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Track 2 UN Length"
        android:id="@+id/textViewTrack2UNLength"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewTrack1Results" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewTrack2Results"
        android:textColor="#ffff0000"
        android:textStyle="bold"
        android:typeface="monospace"
        android:textSize="20sp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewTrack2UNLength"
        android:layout_alignEnd="@+id/textViewTrack2UNLength" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Number of transactions to clone:"
        android:id="@+id/textViewNumTransactionsLabel"
        android:layout_below="@+id/textViewTrack2Results" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewNumTransactions"
        android:textColor="#ff00ff00"
        android:textStyle="bold"
        android:typeface="monospace"
        android:textSize="40sp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewNumTransactionsLabel" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Time to Clone"
        android:id="@+id/textViewTimeToCloneLabel"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewNumTransactions" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewTimeToClone"
        android:textColor="#ff0000ff"
        android:textStyle="bold"
        android:typeface="monospace"
        android:textSize="40sp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewTimeToCloneLabel" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Upload Results"
        android:id="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textViewNumTransactionsLabel"
        android:textSize="40sp"
        android:enabled="false"
        android:visibility="invisible" />

</RelativeLayout>
